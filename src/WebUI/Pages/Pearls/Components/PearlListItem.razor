@using PearlsOfWisdom.WebUI.Clients
@using PearlsOfWisdom.WebUI.Pages.Pearls.Components.KeyPoint

<div class="card mb-3">
    <div class="card-body">
        <div class="mb-3">
            <h5 class="card-title">@Model.Title</h5>
            <p class="">@Model.Note</p>
            <p>@Model.Author</p>
            <ListKeyPoints Items="@Model.KeyPoints" PearlId="@Model.Id" />
        </div>
        <button class="btn btn-primary mb-3" type="button" data-toggle="collapse" data-target="#collapseTranscription-@Model.Id" aria-expanded="false" aria-controls="collapseTranscription-@Model.Id">
            Show Transcription
        </button>
        <div class="collapse" id="collapseTranscription-@Model.Id">
            @((MarkupString) Model.Transcription.Replace("\n", "<br />"))
        </div>
    </div>
</div>

@code
{
    [Parameter]
    public PearlItemVm Model { get; set; }
}